<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/colorPrimary">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorWhite"
        android:background="@drawable/top_image_default"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_height="match_parent"
            android:src="@drawable/logoaccion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/small_margin"
            android:src="@drawable/carrera_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/sensibili"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height_small"
        android:layout_marginTop="@dimen/medium2_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Historial de\n donaciones"
        android:background="@drawable/btn_default"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/top_image"/>

    <Button
        android:id="@+id/carrera"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height_small"
        android:text="Acceso a Imagenes"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_default"
        android:backgroundTint="@color/colorOrange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensibili"
        android:layout_marginTop="@dimen/medium2_margin"/>



</androidx.constraintlayout.widget.ConstraintLayout>
